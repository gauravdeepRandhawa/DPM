<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ModulesPage"
    tools:showIn="@layout/app_bar_modules_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="15dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/semester1Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 1"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="1" />

            <GridView
                android:id="@+id/semester1Gv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="2">

            </GridView>

            <TextView
                android:id="@+id/semester2Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 2"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="3" />

            <GridView
                android:id="@+id/semester2Gv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="4">

            </GridView>

            <TextView
                android:id="@+id/semester3Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 3"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="5" />

            <GridView
                android:id="@+id/semester3Gv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="6">

            </GridView>

            <TextView
                android:id="@+id/semester4Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 4"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="7" />

            <GridView
                android:id="@+id/semester4Gv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="8">

            </GridView>

            <TextView
                android:id="@+id/semester5Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 5"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="9" />

            <GridView
                android:id="@+id/semester5Gv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="10" />

            <TextView
                android:id="@+id/semester6Tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15sp"
                android:text="Semester 6"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_column="0"
                app:layout_row="11" />

            <GridView
                android:id="@+id/semester6Gv"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:nestedScrollingEnabled="true"
                android:numColumns="2"
                app:layout_column="0"
                app:layout_row="12">

            </GridView>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#FDBF08"
                android:text="Save Selection"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="13" />
        </android.support.v7.widget.GridLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>